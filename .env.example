# --- Required ---
OPENAI_API_KEY=sk-...
MELD_BACKEND_TOKEN=replace_me_with_a_long_random_secret

# --- Optional ---
# CORS allow list (if empty, allows *)
ALLOWED_ORIGIN=https://your-site.wordpress.com

# Models (defaults shown)
MELD_OPENAI_FAST_MODEL=gpt-5-nano
MELD_OPENAI_DEEP_MODEL=gpt-5-nano

# xAI scout (optional)
XAI_API_KEY=xai-...
MELD_XAI_MODEL=grok-4
MELD_XAI_BASE_URL=https://api.x.ai

# Redis (recommended for persistence)
REDIS_URL=redis://default:password@host:port
MELD_SESSION_TTL_SEC=604800

# Limits
MAX_SESSION_TURNS=12
MAX_BODY_SIZE=2mb
